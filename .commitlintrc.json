{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "perf", "test", "chore"]
    ],
    "scope-enum": [
      2,
      "always",
      ["api", "database", "core", "shared", "mobile", "config", "monorepo"]
    ]
  }
}
