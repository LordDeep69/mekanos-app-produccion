# ===========================================
# MEKANOS API - ENVIRONMENT VARIABLES TEMPLATE
# ===========================================
# Copy this file to .env and fill with your actual values

# Application
NODE_ENV=development
PORT=3000

# Database Connection (PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database"

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your_anon_key_here"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key_here"

# JWT Configuration
JWT_SECRET="change-this-to-secure-random-string-min-32-chars"
JWT_EXPIRATION="15m"
JWT_REFRESH_SECRET="change-this-to-another-secure-random-string"
JWT_REFRESH_EXPIRATION="7d"

# CORS Configuration
CORS_ORIGIN="http://localhost:3001"

# Cloudinary Configuration (Images)
CLOUDINARY_CLOUD_NAME_PLANTAS="your_cloud_name"
CLOUDINARY_API_KEY_PLANTAS="your_api_key"
CLOUDINARY_API_SECRET_PLANTAS="your_api_secret"
CLOUDINARY_URL_PLANTAS="cloudinary://api_key:api_secret@cloud_name"

CLOUDINARY_CLOUD_NAME_BOMBAS="your_cloud_name"
CLOUDINARY_API_KEY_BOMBAS="your_api_key"
CLOUDINARY_API_SECRET_BOMBAS="your_api_secret"
CLOUDINARY_URL_BOMBAS="cloudinary://api_key:api_secret@cloud_name"

# Cloudflare R2 Configuration (PDFs)
R2_PLANTAS_ACCOUNT_ID="your_account_id"
R2_PLANTAS_ACCESS_KEY_ID="your_access_key"
R2_PLANTAS_SECRET_ACCESS_KEY="your_secret_key"
R2_PLANTAS_BUCKET_NAME="your_bucket_name"
R2_PLANTAS_ENDPOINT="https://your_account_id.r2.cloudflarestorage.com"

R2_BOMBAS_ACCOUNT_ID="your_account_id"
R2_BOMBAS_ACCESS_KEY_ID="your_access_key"
R2_BOMBAS_SECRET_ACCESS_KEY="your_secret_key"
R2_BOMBAS_BUCKET_NAME="your_bucket_name"
R2_BOMBAS_ENDPOINT="https://your_account_id.r2.cloudflarestorage.com"

# Email Configuration (Nodemailer - Gmail SMTP)
EMAIL_SMTP_HOST="smtp.gmail.com"
EMAIL_SMTP_PORT="587"
EMAIL_SMTP_USER="your_email@gmail.com"
EMAIL_SMTP_PASS="your_app_password"
EMAIL_FROM="mekanossas2@gmail.com"

# Logging
LOG_LEVEL="debug"
